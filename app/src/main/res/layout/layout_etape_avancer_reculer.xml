<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textVScenarioRotation_Rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Avancer pendant"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textVScenarioAvancerReculer_Unite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/editTScenarioAvancerReculer_Valeur"
        android:text="seconde(s)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTScenarioAvancerReculer_Valeur"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textVScenarioRotation_Rotation"
        android:ems="10"
        android:inputType="number"
        android:text="60"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnScenarioAvancerReculer_ContrainteJusquA"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textVScenarioAvancerReculer_Unite"
        android:text="+"
        android:layout_centerVertical="true"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerScenarioRotation_DroiteGauche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/spinnerScenarioAvancerReculer_TypeDeContrainte2" />

    <Spinner
        android:id="@+id/spinnerScenarioAvancerReculer_TypeDeContrainte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btnScenarioAvancerReculer_ContrainteJusquA" />

    <ImageButton
        android:id="@+id/imageBtnScenario_SupprimerEtape"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/basic_button_unfocused_red"
        app:srcCompat="@android:drawable/ic_menu_delete" />
</RelativeLayout>
