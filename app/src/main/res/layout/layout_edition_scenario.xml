<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fond_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVEditionScenarioTitre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[NOM DU MODE]"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="47sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageVScannerUneAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVEditionScenarioTitre">

        <LinearLayout
            android:id="@+id/linearLPanneauActions"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textVActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actions"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/linearLayoutActions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/btnAvancerPendant"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="A.0.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_horloge_35"
                            android:text="Avancer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnAvancerSur"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="A.0.1">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_regle_35"
                            android:text="Avancer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnAvancerCapteurProximite"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="A.P.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_capteur_obstacle_35"
                            android:text="Avancer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnAvancerCapteurToucher"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="A.T">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_capteur_toucher_35"
                            android:text="Avancer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnAvancerCapteurCouleur"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="A.C.blanc">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_capteur_couleur_35"
                            android:text="Avancer" />
                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/btnReculerPendant"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="R.0.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_horloge_35"
                            android:text="Reculer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnReculerSur"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="R.0.1">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_regle_35"
                            android:text="Reculer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnReculerCapteurProximite"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="R.P.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_capteur_obstacle_35"
                            android:text="Reculer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnReculerCapteurToucher"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="R.T">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_capteur_toucher_35"
                            android:text="Reculer" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnReculerCapteurCouleur"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="R.C.blanc">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_capteur_couleur_35"
                            android:text="Reculer" />
                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/btnRotationDroite"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="ROT.0.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_droite_35"
                            android:text="Tourner" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnRotationGauche"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="ROT.1.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_gauche_35"
                            android:text="Tourner" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnPause"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="P.0">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_sablier_35"
                            android:drawablePadding="0dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnBip"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="B">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_cloche_35"
                            android:drawablePadding="0dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnMusique"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:tag="M">

                        <Button
                            style="@style/btnAvecTexteEtImageCentresSmartphones"
                            android:drawableRight="@drawable/icon_musique_35"
                            android:drawablePadding="0dp" />
                    </FrameLayout>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageVSeparationActionsScenario"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:visibility="gone"
            app:srcCompat="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textVEditionScenarioNomDuScenario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[NOM DU SCENARIO]"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerVScenario"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageVScannerUneAction"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="#295185"
        android:src="@drawable/btn_scanner_une_action"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnLancerScenario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEnregistrerScenario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/icon_enregistrer"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLancerScenario" />

    <Button
        android:id="@+id/btnEditionScenarioOuvrirUnScenario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/icon_ouvrir"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLancerScenario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/icon_lancer_scenario"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:src="@drawable/logo_iut_blanc"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btnEnregistrerScenario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnEnregistrerScenario" />

</android.support.constraint.ConstraintLayout>