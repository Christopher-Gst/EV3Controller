<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textVDialogTitre"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background_top"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:paddingTop="14dp"
        android:text="[TITRE]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background_middle_smartphones"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textVDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="30dp"
            android:text="[MESSAGE]"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTDialogSaisie"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinnerDialogChoix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FFFFFF"
            android:popupBackground="#000000"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgVDialogImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background_bottom"
        android:gravity="bottom|right"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingBottom="7dp">

        <Button
            android:id="@+id/btnDialogIcone1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_supprimer_80"
            android:scaleType="centerCrop"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDialogIcone2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/icon_modifier_80"
            android:scaleType="centerCrop"
            android:textSize="14sp"
            android:visibility="gone" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDialogOptionnel"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_positif"
            android:padding="0dp"
            android:text="OPTION"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDialogNegatif"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:background="@drawable/btn_negatif"
            android:padding="0dp"
            android:text="ANNULER"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDialogPositif"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_positif"
            android:padding="0dp"
            android:text="VALIDER"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>