<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/textVDialogTitre"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background_top"
        android:gravity="center"
        android:paddingTop="17dp"
        android:text="[TITRE]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textVDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="@drawable/dialog_background_middle"
        android:text="[MESSAGE]"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background_bottom"
        android:gravity="bottom|right"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/btnDialogNegatif"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_negatif"
            android:padding="0dp"
            android:text="ANNULER"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnDialogPositif"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_positif"
            android:padding="0dp"
            android:text="VALIDER"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>